{
  "name": "sketch-select-layers",
  "version": "0.5.0",
  "description": "A Sketch plugin for creating or filtering a selection of layers based on name, type or similarity",
  "keywords": [
    "plugin",
    "sketch",
    "sketch-plugin-helper"
  ],
  "license": "MIT",
  "author": "Lim Yuan Qing",
  "repository": "yuanqing/sketch-select-layers",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "sph build",
    "fix": "sph lint --fix",
    "lint": "sph lint",
    "symlink": "sph symlink",
    "unlink": "sph symlink --delete",
    "version": "sph version",
    "watch": "sph build --watch"
  },
  "devDependencies": {
    "sketch-plugin-helper": "*"
  },
  "sketch-plugin-helper": {
    "name": "Select Layers",
    "menu": [
      {
        "handler": "select-by-name",
        "label": "Select By Name"
      },
      "-",
      {
        "handler": "select-by-type/types/artboard",
        "label": "Select Artboards"
      },
      {
        "handler": "select-by-type/types/group",
        "label": "Select Groups"
      },
      {
        "handler": "select-by-type/types/shape-layer",
        "label": "Select Shape Layers"
      },
      {
        "handler": "select-by-type/types/text-layer",
        "label": "Select Text Layers"
      },
      {
        "handler": "select-by-type/types/symbol-instance",
        "label": "Select Symbol Instances"
      },
      {
        "handler": "select-by-type/types/image",
        "label": "Select Images"
      },
      {
        "handler": "select-by-type/types/slice",
        "label": "Select Slices"
      },
      {
        "handler": "select-by-type/types/hotspot",
        "label": "Select Hotspots"
      },
      {
        "handler": "select-by-type/types/hidden-layer",
        "label": "Select Hidden Layers"
      },
      "-",
      {
        "handler": "select-same/attributes/name",
        "label": "Select Same Name"
      },
      {
        "handler": "select-same/attributes/style",
        "label": "Select Same Layer Style or Text Style"
      },
      {
        "handler": "select-same/attributes/symbol-instance",
        "label": "Select Same Symbol Instance"
      },
      "-",
      {
        "handler": "reset-settings",
        "label": "Reset Settings"
      }
    ],
    "defaultSettings": {
      "selectByName": {
        "exactMatch": true,
        "layerName": null,
        "type": "Any"
      }
    }
  }
}
